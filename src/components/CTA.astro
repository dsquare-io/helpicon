---
import CTAButton from "./CTAButton.jsx";

const STRINGS = {
    en: {
        tagLine: 'Get RUT deduction with Helpicon',
        actionText: 'Publish a task',
    },
    sv: {
        tagLine: 'FÃ¥ RUT avdrag med Helpicon',
        actionText: 'Publicera ett uppdrag',
    }
};

const { locale } = Astro.props;
const { tagLine, actionText } = STRINGS[locale];
---

<div class="bg-app-200 py-12 lg:py-24 px-6">
    <div class="relative mx-auto max-w-4xl w-full bg-app-green-200 rounded-2xl shadow-lg text-center px-12 py-24 border-2 border-r-6 border-b-6 border-app-green-300">
        <div class="text-xl text-app-800 mb-8">
            {tagLine}
        </div>

        <CTAButton>
            <div class="px-4 py-2">
                {actionText}
            </div>
        </CTAButton>

        <img src="../assets/cta-arrow-top.png" alt="Arrow Top" class="block h-20 lg:h-40 absolute left-0 top-0" />
        <img src="../assets/cta-arrow-bottom.png" alt="Arrow Bottom" class="block h-20 lg:h-40 absolute right-0 bottom-0" />
    </div>
</div>
