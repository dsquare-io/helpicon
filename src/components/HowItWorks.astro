---
import CTAButton from "./CTAButton.jsx";

const STRINGS = {
    en: {
        title: "How It Works",
        steps: [
            {
                icon: "/assets/card-icon-task.png",
                title: "Describe your needs",
                description: "Define the task you need help with."
            },
            {
                icon: "/assets/card-icon-price.png",
                title: "Set your budget",
                description: "Specify how much you are willing to pay.",
            },
            {
                icon: "/assets/card-icon-candidate.png",
                title: "Find the right candidate",
                description: "Choose the best Helper based on reviews and experience."
            }
        ],
        ctaAction: "Get started today – Post a task!"
    },
    sv: {
        title: "Hur det fungerar",
        steps: [
            {
                icon: "/assets/card-icon-task.png",
                title: "Beskriv era behov",
                description: "Definiera vad ni behöver hjälp med."
            },
            {
                icon: "/assets/card-icon-price.png",
                title: "Välj er budget",
                description: "Ange hur mycket ni är villiga att betala."
            },
            {
                icon: "/assets/card-icon-candidate.png",
                title: "Hitta rätt kandidat",
                description: "Välj den bästa Helpern baserat på omdömen och erfarenhet."
            }
        ],
        ctaAction: "Börja idag – Publicera ett uppdrag!"
    }
}

const { locale } = Astro.props;
const { title, steps, ctaAction } = STRINGS[locale];
---

<div class="container mx-auto py-12 px-6">
    <h3 class="text-3xl lg:text-5xl font-semibold text-center">{title}</h3>
    <div class="grid lg:grid-cols-3 gap-x-40 gap-y-8 text-center mt-12">
        {steps.map((step) => (
            <div class="shadow-lg bg-white rounded-4xl p-4">
                <img src={step.icon} alt={step.title} class="h-20 mx-auto block my-4"/>
                <h4 class="text-2xl font-semibold mb-4">{step.title}</h4>
                <p>{step.description}</p>
            </div>
        ))}
    </div>

    <div class="flex space-between">
        <img src="/assets/arrow-left.svg" alt="Arrow Left" class="h-25 lg:h-60" />
        <div class="flex-1 flex items-end justify-center mb-12 mt-8">
            <CTAButton>{ctaAction}</CTAButton>
        </div>
        <img src="/assets/arrow-right.svg" alt="Arrow Right" class="h-25 lg:h-60" />
    </div>
</div>
